<Window x:Class="LanguageSchool.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LanguageSchool"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Background="White">
        <Border Grid.Row="0" >
            <TextBlock Text="Вход в систему" TextAlignment="Center"  
        VerticalAlignment="Top"
        FontFamily="Times New Roman"
        Background="#FF69B4" Height="50"
        FontSize="24px" />

        </Border>
        <StackPanel Margin="275,136,275,100">
            <TextBlock Text="Телефон:" 
             FontFamily="Times New Roman"
             Foreground="#FF333333" 
             FontSize="14" />
            <TextBox x:Name="PhoneBox"
             Background="White" 
             BorderBrush="#FFD3D3D3" 
             BorderThickness="1" 
             Padding="5" 
             Margin="0,0,0,10"/>

                <TextBlock Text="Пароль:" 
                 FontFamily="Times New Roman"
                 Foreground="#FF333333" 
                 FontSize="14" 
                 Margin="0,0,0,5" />
            <PasswordBox x:Name="PasswordBox" 
             Background="White" 
             BorderBrush="#FFD3D3D3" 
             BorderThickness="1" 
             Padding="5" 
             Margin="0,0,0,20"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button x:Name="VhodButton" Content="Войти" Click="VhodButtonClick"
                 Background="#FF69B4"
                 Width="100" 
                 Height="30" 
                 Margin="0,0,10,0"/>

                <Button Content="Выйти" 
                 Background="#FF69B4"
                 Width="100" 
                 Height="30" />
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
