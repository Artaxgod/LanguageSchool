<Page x:Class="LanguageSchool.View.Pages.Admin.ClientsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LanguageSchool.View.Pages.Admin"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ClientsPage">

    <Grid>
        <DataGrid ItemsSource="{Binding Clients}" SelectedItem="{Binding SelectedClient}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ФИО" Binding="{Binding User.FullName}"/>
                <DataGridTextColumn Header="Email" Binding="{Binding User.Email}"/>
                <DataGridTextColumn Header="Доп. информация" Binding="{Binding AdditionalInfo}"/>
            </DataGrid.Columns>
        </DataGrid>
        <Button Content="Добавить" Command="{Binding AddClientCommand}" Style="{StaticResource PrimaryButton}"/>
        <Button Content="Удалить" Command="{Binding DeleteClientCommand}" Style="{StaticResource PrimaryButton}" Click="Button_Click"/>
    </Grid>
</Page>
