<Page x:Class="LanguageSchool.View.Pages.AdminPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LanguageSchool.View.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AdminPage">

    <Grid>
        <DataGrid ItemsSource="{Binding Users}" />
        <Button Content="Добавить пользователя" Command="{Binding AddUserCommand}" />
        <Button Content="Удалить пользователя" Command="{Binding DeleteUserCommand}" />
    </Grid>
</Page>
