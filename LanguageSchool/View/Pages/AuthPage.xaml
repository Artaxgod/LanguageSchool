<Page x:Class="LanguageSchool.View.Pages.AuthPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LanguageSchool.View.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
     Title="Вход в систему">
    <Grid Background="White">
        <Border Background="#FF69B4" Height="50" VerticalAlignment="Top">
            <TextBlock Text="Вход в систему" 
                       TextAlignment="Center" 
                       FontFamily="Times New Roman" 
                       FontSize="24"/>
        </Border>
        <StackPanel Margin="275,136,275,100">
            <TextBlock Text="Телефон:" 
                       FontFamily="Times New Roman" 
                       Foreground="#FF333333" 
                       FontSize="14"/>
            <TextBox Text="" 
                     Background="White" 
                     BorderBrush="#FFD3D3D3" 
                     BorderThickness="1" 
                     Padding="5" 
                     Margin="0,0,0,10"/>

            <TextBlock Text="Пароль:" 
                       FontFamily="Times New Roman" 
                       Foreground="#FF333333" 
                       FontSize="14" 
                       Margin="0,0,0,5"/>
            <PasswordBox x:Name="PasswordBox"  
                         Background="White" 
                         BorderBrush="#FFD3D3D3" 
                         BorderThickness="1" 
                         Padding="5" 
                         Margin="0,0,0,20"/>

            <Button Content="Войти" 
                    Command="{Binding LoginCommand}" 
                    Background="#FF69B4"
                    Width="100" 
                    Height="30" 
                    Margin="0,0,10,0"/>
            <TextBlock Text="{Binding ErrorMessage}" Foreground="Red"/>
        </StackPanel>
    </Grid>
</Page>
